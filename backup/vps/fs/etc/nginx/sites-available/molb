upstream app_server {
	# fail_timeout=0 means we always retry an upstream even if it failed
	# to return a good HTTP response

	# for UNIX domain socket setups
	server unix:/home/molb/molb.sock fail_timeout=0;

	# for a TCP configuration
	# server 127.0.0.1:8080 fail_timeout=0;
}

server {
	# use 'listen 80 deferred;' for Linux
	# use 'listen 80 accept_filter=httpready;' for FreeBSD
	listen 80 deferred;
	client_max_body_size 4G;

	# set the correct host(s) for your site
	server_name commandes.molb.pro;

	keepalive_timeout 5;

	# path for static files
	root /home/molb/venv/lib/python3.5/site-packages/molb/static;

	location = /favico.ico {
		root /home/molb/venv/lib/python3.5/site-packages/molb/static/favico.ico;
	}

	location / {
		# checks for static file, if not found proxy to app
		try_files $uri @proxy_to_app;

		# limit the types of http requests the server accepts
		limit_except GET POST {
			deny all;
		}
	}

	location @proxy_to_app {
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		# enable this if and only if you use HTTPS
		# proxy_set_header X-Forwarded-Proto https;
		proxy_set_header Host $http_host;
		# we don't want nginx trying to do something clever with
		# redirects, we set the Host: header above already.
		proxy_redirect off;
		proxy_pass http://app_server;
	}

	include /etc/nginx/badbot.conf;
}
